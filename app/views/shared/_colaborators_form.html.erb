<%= form_with model: @colaborator, class: "artigo-form" do |form| %>
  <div class="field">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :avatar %><br />
    <%= form.file_field :avatar %>
  </div>
  <div class="field">
    <%= form.label :description, 'Descrição' %>
    <%= form.text_area :description, size: '100x20' %>
  </div>
  <%= form.submit "Criar Colaborador" %>
<% end %>
