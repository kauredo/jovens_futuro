{
	"compilerOptions": {
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es6", "dom"],
		"module": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"jsx": "react",
		"esModuleInterop": true
	},
	"exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
	"compileOnSave": false
}
